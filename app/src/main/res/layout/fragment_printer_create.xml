<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple">

    <ImageView
        android:id="@+id/fragment_printer_create_imageview_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_make"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:hint="@string/hint_printer_make"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textColorHint="@color/edittext_offwhite"
        android:backgroundTint="@color/edittext_offwhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_model"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_model"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fragment_printer_create_edittext_make"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/fragment_printer_create_spinner_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_make"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_make" />

    <Spinner
        android:id="@+id/fragment_printer_create_spinner_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="36dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/white"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_model"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_make" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_serial"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_serial"
        android:inputType="textCapCharacters"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_spinner_status" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_owner"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_owner"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/fragment_printer_create_edittext_serial"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_spinner_color" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_dept"
        android:layout_width="144dp"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_dept"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_serial"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_serial" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_location"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_location"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_owner"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_owner" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_floor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_floor"
        android:inputType="textCapWords"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_dept"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_dept" />

    <EditText
        android:id="@+id/fragment_printer_create_edittext_ip"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/edittext_offwhite"
        android:hint="@string/hint_printer_ip"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/white"
        android:textColorHint="@color/edittext_offwhite"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/fragment_printer_create_edittext_floor"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_floor" />

    <Button
        android:id="@+id/fragment_printer_create_button_save"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/white"
        android:text="@string/btn_save"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_printer_create_edittext_ip" />

</androidx.constraintlayout.widget.ConstraintLayout>