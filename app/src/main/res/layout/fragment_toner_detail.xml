<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background">

    <FrameLayout
        android:id="@+id/fragment_toner_detail_frame_banner"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/rounded_frame"
        android:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/fragment_toner_detail_frame_icon"
            android:layout_width="165dp"
            android:layout_height="165dp"
            android:background="@drawable/circular_shape"
            android:backgroundTint="@color/white"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/fragment_toner_detail_textview_icon"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_toner" />

        </FrameLayout>

    </FrameLayout>

    <ImageView
        android:id="@+id/fragment_toner_detail_imageview_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fragment_toner_detail_imageview_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_toner_detail_textview_make"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Konica C368"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_frame_banner" />

    <FrameLayout
        android:id="@+id/fragment_toner_detail_frame_black"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_toner_frame"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_toner_detail_guideline_vertical"
        app:layout_constraintStart_toStartOf="@+id/fragment_toner_detail_guideline_vertical"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_textview_make">

        <FrameLayout
            android:id="@+id/fragment_toner_detail_black"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circular_shape"
            android:backgroundTint="@color/black">
        </FrameLayout>

        <TextView
            android:id="@+id/fragment_toner_detail_textview_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal |center_vertical"
            android:layout_marginTop="20dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_toner_detail_frame_cyan"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_toner_frame"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/fragment_toner_detail_frame_yellow"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_frame_black">

        <FrameLayout
            android:id="@+id/fragment_toner_detail_cyan"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circular_shape"
            android:backgroundTint="@color/cyan" />

        <TextView
            android:id="@+id/fragment_toner_detail_textview_cyan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal |center_vertical"
            android:layout_marginTop="20dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_toner_detail_frame_yellow"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_toner_frame"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_toner_detail_frame_black"
        app:layout_constraintStart_toStartOf="@+id/fragment_toner_detail_frame_black"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_frame_black">

        <FrameLayout
            android:id="@+id/fragment_toner_detail_yellow"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circular_shape"
            android:backgroundTint="@color/yellow" />

        <TextView
            android:id="@+id/fragment_toner_detail_textview_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal |center_vertical"
            android:layout_marginTop="20dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_toner_detail_frame_magenta"
        android:layout_width="70dp"
        android:layout_height="85dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_toner_frame"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintStart_toEndOf="@+id/fragment_toner_detail_frame_yellow"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_frame_black">

        <FrameLayout
            android:id="@+id/fragment_toner_detail_magenta"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:background="@drawable/circular_shape"
            android:backgroundTint="@color/magenta" />

        <TextView
            android:id="@+id/fragment_toner_detail_textview_magenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal |center_vertical"
            android:layout_marginTop="20dp"
            android:text="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fragment_toner_detail_guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/fragment_toner_detail_button_edit"
        android:layout_width="145dp"
        android:layout_height="55dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/orange"
        android:text="Edit toner"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_toner_detail_textview_make" />

</androidx.constraintlayout.widget.ConstraintLayout>